            Height="10"
            Margin="54,140,0,0" 
            VerticalAlignment="Top"
            Width="10"
            />

        <Image 
            Source="..\\Resources/Pictures/buttonResumeDark.png"
            HorizontalAlignment="Left"
            Height="10"
            Margin="69,140,0,0" 
            VerticalAlignment="Top"
            Width="10"
            />

        <Image 
            Source="..\\Resources/Pictures/buttonStopDark.png"
            HorizontalAlignment="Left"
            Height="10"
            Margin="84,140,0,0" 
            VerticalAlignment="Top"
            Width="10"
            />

        <Label 
            Content="00:00" 
            HorizontalAlignment="Left" 
            Margin="174,132,0,0" 
            VerticalAlignment="Top"
            Foreground="Gray"
            />

        <Label 
            Content="/" 
            HorizontalAlignment="Left" 
            Margin="204,132,0,0" 
            VerticalAlignment="Top"
            Foreground="Gray"
            />

        <Label 
            Content="00:00" 
            HorizontalAlignment="Left" 
            Margin="212,132,0,0" 
            VerticalAlignment="Top"
            Foreground="Gray"
            />

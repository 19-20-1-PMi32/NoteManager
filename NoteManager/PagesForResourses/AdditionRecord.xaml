            Width="30"
            />

        <Label 
            Content="00:00" 
            HorizontalAlignment="Left" 
            Margin="70,277,0,0" 
            VerticalAlignment="Top"
            Foreground="Gray"
            />

        <Image 
            Source="..\\Resources/Pictures/buttonSaveDark.png"
            HorizontalAlignment="Left"
            Height="30"
            Margin="260,275,0,0" 
            VerticalAlignment="Top"
            Width="30"
            />

        <ListBox 
            HorizontalAlignment="Left" 
            Height="115" 

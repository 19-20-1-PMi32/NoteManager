<Page x:Class="NoteManager.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NoteManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <!-- Background picture-->
        <Grid.Background>
            <ImageBrush 
        			ImageSource="Resources/Pictures/BlackBlueBackground.png" 
        			Stretch="UniformToFill" 					
        			AlignmentY="Center"        					
        			AlignmentX="Center"
        		/>
        </Grid.Background>

        <!-- The screen is divided into three parts-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- The screen is divided into three parts-->
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="4"
            Background="Black"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="2"
            Visibility="Hidden"
            Name="MessageBox"
            >
            <Label
                Foreground="White"
                Name="Message"
                FontSize="14"
                >
                Some message to the user
            </Label>
        </Border>
        <!-- Under notes -->
        <Label 
            Name="LabelUnderNotes"
            Content="_____________" 
            Foreground="Gray"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="-8,-5,0,0"
            VerticalAlignment="Top" 
            Height="35"
            />

        <!-- Under Reminders -->
        <Label 
            Name="LabelUnderReminders"
            Content="_____________________" 
            Foreground="Gray"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="50,-5,0,0"
            VerticalAlignment="Top" 
            Height="35" 
            />

        <!-- Under Plans -->
        <Label 
            Name="LabelUnderPlans"
            Content="_____________" 
            Foreground="Gray"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="140,-5,0,0"
            VerticalAlignment="Top" 
            Height="35" 
            Width="65" 
            Grid.ColumnSpan="2" 
            Grid.RowSpan="2" 
            />

        <!-- Notes -->
        <Label 
            MouseUp="ClickOnNotes"
            MouseEnter="EnterOnLabel"
            MouseLeave="LeaveWithLabel"
            Name="LabelNotes"
            Content="Notes" 
            FontSize="18"
            Margin="0,-8,0,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            />

        <!-- Reminders -->
        <Label 
            MouseUp="ClickOnReminders"
            MouseEnter="EnterOnLabel"
            MouseLeave="LeaveWithLabel"
            Name="LabelReminders"
            Content="Reminders" 
            FontSize="18"
            Margin="54,-8,0,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="40"
            />

        <!-- Plans -->
        <Label 
            Name="LabelPlans"
            MouseUp="ClickOnPlans"
            MouseEnter="EnterOnLabel"
            MouseLeave="LeaveWithLabel"
            Content="Plans" 
            FontSize="18"
            Margin="145,-8,0,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="40"
            />

        <!-- Label User name -->
        <Label 
            Name="LabelUserName"
            Content="Admin" 
            Margin="0,-3,10,0"
            FontSize="14"
            Foreground="White"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" Grid.Column="1"
            />

        <Frame 
            Name="FrameMain"
            Margin="0"
            Source="PageNote.xaml"  
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            />
        <Button Content="Message"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="319,288,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="75"
                Click="ShowMessage"
                />
    </Grid>
</Page>

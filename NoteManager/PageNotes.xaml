        <!-- Main TextBox-->
        <TextBox 
            Text="TextBox" 
            Opacity="0.8"
            TextAlignment="Left" 
            TextWrapping="Wrap" 
            VerticalContentAlignment="Top"
            VerticalAlignment="Stretch" 
            Margin="5,50,5,75" 
            Height="auto"
            FontSize="16" 
            CaretBrush="{x:Null}" 
            BorderBrush="{x:Null}"
            Grid.Column="1"
            >
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FF363636" Offset="0"/>
                    <GradientStop Color="#FF252525" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>

            <!-- Прозорість тексту -->
            <TextBox.Foreground>
                <SolidColorBrush Opacity="1" Color="#FF00FF23"/>
            </TextBox.Foreground>
        </TextBox>

